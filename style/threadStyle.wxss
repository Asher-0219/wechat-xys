.cate-icon{
	width: 80rpx;
	height: 80rpx;
	border-radius: 10rpx;
	flex: 0 0 auto;
}

.cate-list{
	padding: 24rpx 24rpx 24rpx 24rpx;
	margin-top: 20rpx;
	background-color: #fff;
	position:relative;
}

.cate-list:first-child{
	margin-top: 0;
}

.catel-posttype{
	position:absolute;
	top:0;
	right:0;
}

.catel-posttype image{
	width: 54rpx;
	height: 54rpx;
}

.catel-head{
	height: 80rpx;
	display: flex;
}

.catel-person{
	margin-left: 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.catel-person-info{
	font-size: 30rpx;
	color:#303030;
	display: flex;
}

.catel-person-info-name{
	font-size: 30rpx;
	color: #101010;
}

.catel-person-info-gender{
	width: 68rpx;
	height: 31rpx;
	margin-left: 15rpx;
	position: relative;
}

.catel-person-info-gender image{
	width: 68rpx;
	height: 31rpx;
}

.catel-person-info-age{
	color: #fff;
	position: absolute;
	top:0;
	right:10rpx;
	line-height: 31rpx;
}

.catel-person-badge image{
	width: 30rpx;
	height: 30rpx;
	margin-left: 10rpx;
}

.catel-post-date{
	font-size: 24rpx;
	color:#959595;
}

.catel-voice{
	margin-top: 32rpx;
	display: flex;
	justify-content: center;
}

.catel-voice image{
	width: 40rpx;
	height: 40rpx;
}

.catel-voice-img{
	margin: 0 15rpx;
}

.catel-message{
	margin-top: 32rpx;
	font-size: 26rpx;
	line-height: 46rpx;
}

.catel-ispoll{
	font-size: 24rpx;
	color:#959595;
	margin: 32rpx 0 28rpx;
}

/*.catel-ispoll image{
	width: 26rpx;
	height: 22rpx;
}*/

.catel-img{
	display: flex;
	flex-wrap: wrap;
	margin: 43rpx 0 28rpx;
}

.catel-img>view{
	font-size: 0;
}

.catel-img image{
	width: 230rpx;
	height: 230rpx;
	margin-top: 5rpx;
	margin-right: 5px;
}

.catel-empty{
	width: 230rpx;
	height: 230rpx;
	margin-top: 5rpx;
	display: inline-block;
}

.catel-postinfo{
	height: 62rpx;
	background-color: #f5f5f7;
	padding-left:38rpx;
	margin-top: 28rpx;
	font-size: 24rpx;
	color:#303030;
	line-height: 62rpx;
	border-radius: 5px;
}

.catel-postinfo-name{
	color:#ff4d8d;
}

.catel-tool{
	display: flex;
	height: 90rpx;
	padding: 0 48rpx;
	justify-content: space-between;
	align-items: center;
	font-size: 24rpx;
	color:#959595;
}

.catel-tool-icon{
	display: flex;
	align-items: center;
	height: 90rpx;
}

.catel-tool-icon image{
	height: 24rpx;
	width: 24rpx;
	margin-right: 10rpx;
}

.cate-post{
	width: 750rpx;
	height: 90rpx;
	position: fixed;
	bottom: 40rpx;
	display: flex;
	justify-content: center;
}

.cate-post image{
	width: 90rpx;
	height: 90rpx;
}