/* pages/categories/categories.wxss */
.cate-head{
	height:80rpx;
	padding: 20rpx 24rpx 30rpx 24rpx;
	display: flex;
	align-items: center;
	border-bottom: 1px solid #dfdfdf;
}

.cate-icon{
	width: 80rpx;
	height: 80rpx;
	border-radius: 10rpx;
	flex: 0 0 auto;
}

.cateh-info{
	margin-left: 20rpx;
	display: flex;
	flex-direction: column;
	flex-basis:100%;
}

.catehi-name{
	color: #101010;
	font-size: 30rpx;
	line-height: 30rpx;
}

.cateh-icon2{
	width: 20rpx;
	height: 26rpx;
}

.catehi-fp{
	margin-top: 19rpx;
	color: #959595;
	font-size: 24rpx;
	line-height: 24rpx;
}

.catehi-fp text:first-child{
	margin-right: 40rpx;
}

.cate-intro{
	height: 80rpx;
	padding-left: 24rpx;
	display: flex;
	align-items: center;
	font-size: 26rpx;
	border-bottom: 1px solid #dfdfdf;
}

.cate-intro view{
	box-sizing: border-box;
	width: 80rpx;
	padding-left: 15rpx;
	margin-right: 20rpx;
	height: 40rpx;
	line-height: 40rpx;
	color:#fff;
	font-size: 26rpx;
	background-color: #ff4d8d;
	border-radius: 8rpx;
}

.cate-intro text{
	font-size: 26rpx;
	color: 303030;
}

.cate-navbar{
	background-color: #f5f5f7;
	width: 750rpx;
}

.cate-navbar-info{
	background-color: #f5f5f7;
	padding-top: 20rpx;
}

.cate-list{
	padding: 24rpx 24rpx 0 24rpx;
	margin-top: 20rpx;
	background-color: #fff;
	position:relative;
}

.cate-list:first-child{
	margin-top: 0;
}

.catel-posttype{
	position:absolute;
	top:0;
	right:0;
}

.catel-posttype image{
	width: 54rpx;
	height: 54rpx;
}

.catel-head{
	height: 80rpx;
	display: flex;
}

.catel-person{
	margin-left: 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.catel-person-info{
	font-size: 30rpx;
	color:#303030;
	display: flex;
}

.catel-person-info-name{
	font-size: 30rpx;
	color: #101010;
}

.catel-person-info-gender{
	width: 68rpx;
	height: 31rpx;
	margin-left: 15rpx;
	position: relative;
}

.catel-person-info-gender image{
	width: 68rpx;
	height: 31rpx;
}

.catel-person-info-age{
	color: #fff;
	position: absolute;
	top:0;
	right:10rpx;
	line-height: 31rpx;
}

.catel-person-badge image{
	width: 30rpx;
	height: 30rpx;
	margin-left: 10rpx;
}

.catel-post-date{
	font-size: 24rpx;
	color:#959595;
}

.catel-voice{
	margin-top: 32rpx;
	display: flex;
	justify-content: center;
}

.catel-voice image{
	width: 40rpx;
	height: 40rpx;
}

.catel-voice-img{
	margin: 0 15rpx;
}

.catel-message{
	margin-top: 32rpx;
	font-size: 26rpx;
	line-height: 46rpx;
	overflow: hidden;
}

.catel-mmore{
	color: #687AB3;
	font-size: 26rpx;
	margin-top: 30rpx;
}

.catel-ispoll{
	font-size: 24rpx;
	color:#959595;
	margin: 32rpx 0 28rpx;
}

.catel-ispoll image{
	width: 26rpx;
	height: 22rpx;
}

.catel-img{
	display: flex;
	flex-wrap: wrap;
	margin: 43rpx 0 28rpx;
}

.catel-img>view{
	font-size: 0
}

.catel-img image{
	width: 230rpx;
	height: 230rpx;
	margin-top: 5rpx;
	margin-right: 5rpx;
}

.catel-empty{
	width: 230rpx;
	height: 230rpx;
	margin-top: 5rpx;
	display: inline-block;
}

.catel-postinfo{
	height: 62rpx;
	background-color: #f5f5f7;
	padding-left:38rpx;
	margin-top: 28rpx;
	font-size: 24rpx;
	color:#303030;
	line-height: 62rpx;
	border-radius: 5px;
}

.catel-postinfo-name{
	color:#ff4d8d;
}

.catel-tool{
	display: flex;
	height: 90rpx;
	padding: 0 48rpx;
	justify-content: space-between;
	align-items: center;
	font-size: 24rpx;
	color:#959595;
}

.catel-tool-icon{
	display: flex;
	align-items: center;
	height: 90rpx;
}

.catel-tool-icon image{
	height: 24rpx;
	width: 24rpx;
	margin-right: 10rpx;
}

.cate-post{
	width: 750rpx;
	height: 90rpx;
	position: fixed;
	bottom: 40rpx;
	display: flex;
	justify-content: center;
}

.cate-post image{
	width: 90rpx;
	height: 90rpx;
}
