/* pages/message/messageCenter/messageCenter.wxss */

page {
  background: #f5f5f7;
}

.item {
  display: flex;
  height: 135rpx;
  border-bottom: 1px solid #e6e6e7;
}

.list {
  background: #fff;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: auto 24rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.info {
  align-self: center;
}

.title {
  font-size: 32rpx;
  color: #101010;
  margin-bottom: 30rpx;
}

.text {
  font-size: 24rpx;
  color: #959595;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 500rpx;
}

.time {
  margin-left: auto;
  margin-right: 26rpx;
  font-size: 22rpx;
  color: #959595;
  margin-top: 26rpx;
}

.time text {
  margin-bottom: 34rpx;
  display: block;
}

.num {
  width: 34rpx;
  height: 34rpx;
  background: #ff1515;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  line-height: 34rpx;
  border-radius: 50%;
  margin-left: auto;
}
