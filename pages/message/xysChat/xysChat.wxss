/* pages/message/xysChat/xysChat.wxss */

page {
  background: #f5f5f7;
  padding: 25rpx 0;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}
.list{
  width: 100%;
}
.date {
  display: inline-block;
  text-align: center;
  height: 40rpx;
  font-size: 20rpx;
  background: #e6e6e7;
  border-radius: 10rpx;
  color: #fff;
  line-height: 40rpx;
  margin-left: 245rpx;
  padding: 0 24rpx;
  margin-bottom: 25rpx;
}

.item {
  padding: 0 24rpx;
  margin-bottom: 50rpx;
}

.message {
  display: flex;
  align-items: center;
}

.avatar {
  width: 84rpx;
  height: 84rpx;
  border-radius: 10rpx;
  margin-right: 15rpx;
  min-width:84rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.news {
  padding: 25rpx 26rpx 29rpx 25rpx;
  font-size: 30rpx;
  color: #303030;
  background: #c4c4c4;
  border-radius: 50rpx;
}

.input {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.icons {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

.icons image {
  width: 50rpx;
  height: 50rpx;
}

.icons .call {
  width: 63rpx;
  height: 63rpx;
}

.fixed {
  position: fixed;
  bottom: 0;
  background: #f5f5f7;
}

.icons {
  height: 116rpx;
}

.send {
  width: 125rpx;
  height: 74rpx;
  background: #c4c4c4;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 74rpx;
  border-radius: 10rpx;
}

input {
  width: 564rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-right: 12rpx;
  height: 74rpx;
  font-size: 30rpx;
  color: #303030;
  line-height: 74rpx;
  padding: 5rpx 32rpx 5rpx 16rpx;
  box-sizing: border-box;
}

#emotions image {
  width: 56rpx;
  height: 67rpx;
  margin-right: 46rpx;
  margin-bottom: 38rpx;
}

#emotions {
  padding-top: 54rpx;
  padding-left: 42rpx;
  box-sizing: border-box;
  background: #fff;
}

.tips-list {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.tips-content {
  border-radius: 10rpx;
  width: 665rpx;
  height: 665rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  background: #fff;
  border: 1px solid #969696;
}

.tips-title {
  height: 100rpx;
  width: 100%;
  background: #fafafa;
  font-size: 34rpx;
  text-align: center;
  line-height: 100rpx;
  color: #101010;
  border-bottom: 1px solid #f5f5f5;
}

.tips-item {
  border-bottom: 1px solid #f5f5f5;
  width: 100%;
  height: 108rpx;
  text-align: center;
  line-height: 108rpx;
  font-size: 28rpx;
  color: #303030;
}

.change-new {
  color: #959595;
  font-size: 28rpx;
  text-align: center;
  line-height: 125rpx;
  height: 125rpx;
}

/*礼物列表*/

.gifts-list {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: #fff;
  height: 696rpx;
}

.gift-title {
  height: 82rpx;
  width: 100%;
  border-bottom: 1px solid #e9e9e9;
  font-size: 28rpx;
  color: #ff77a4;
  line-height: 82rpx;
}

.gift-content {
  height: 490rpx;
  border-bottom: 1px solid #e9e9e9;
  box-sizing: border-box;
  padding-top: 18rpx;
  padding-left: 9rpx;
  padding-right: 9rpx;
}

.title-text {
  width: 196rpx;
  height: 100%;
  text-align: center;
  border-bottom: 4rpx solid #ff77a4;
  box-sizing: border-box;
}

swiper {
  height: 100%;
}

.gift-item {
  width: 25%;
  display: inline-block;
  text-align: center;
  height: 200rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.gift-item image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 18rpx;
  display: inline-block;
  margin-top: 30rpx;
}

.gift-name {
  font-size: 22rpx;
  color: #303030;
  margin-bottom: 18rpx;
  display: block;
}

.gift-price {
  font-size: 20rpx;
  color: #c4c4c4;
  display: block;
}

.gift-footer {
  height: 124rpx;
  line-height: 124rpx;
  display: flex;
  align-items: center;
  padding: 0 26rpx;
}

.ub {
  font-size: 30rpx;
  color: #ff4d8d;
}

.ub text {
  font-size: 26rpx;
  color: #959595;
}

.recharge {
  margin-left: auto;
  display: flex;
  align-items: center;
}

.recharge-btn {
  border-radius: 10rpx;
  border: 1px solid #ffa531;
  box-sizing: border-box;
  width: 126rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: #ffa531;
  margin-right: 16rpx;
}

.give-gift {
  width: 250rpx;
  height: 60rpx;
  border: 1px solid #ff5480;
  border-radius: 10rpx;
  color: #ff5480;
  line-height: 60rpx;
  position: relative;
}

.give-gift-othernum{
  width: 272rpx;
  border: 1px solid #F1F1F1;
  font-size: 32rpx;
  position: absolute;
  top: -12rpx;
  left: -24rpx;
  background: #fff;
  color: #949494;
  transform: translateY(-100%);
}

.give-gift-item{
  width: 272rpx;
  height: 60rpx;
  margin: 0 auto;
  box-sizing: border-box;
  border-top: 1px solid #F1F1F1;
  line-height: 60rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.give-gift-item text:first-child{
  color:#464646;
}

.give-gift-item text+text{
  margin-left: 25rpx;
  color: #949494;
}

.give-gift-otheritem{
  border:none;
  color:#949494;
}

.give-num {
  width: 50%;
  float: left;
  height: 100%;
  /*padding-left: 40rpx;*/
  box-sizing: border-box;
  padding-right: 18rpx;
  display: flex;
  align-items: center;
}

.give-num view:first-child{
  width: 90rpx;
  text-align: center;
}

.give-btn {
  text-align: center;
  width: 50%;
  background: #ff5480;
  color: #fff;
  font-size: 30rpx;
  height: 100%;
  float: left;
}

.gift-item.active {
  border: 1px solid #ffacc8;
}

/*聊五毛*/

.wumao {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.wumao-content {
  border-radius: 10rpx;
  width: 530rpx;
  height: 440rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  background: #fff;
  border: 1px solid #969696;
}

.wumao-title {
  height: 228rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e9e9e9;
}

.wumao-title image {
  width: 111rpx;
  height: 108rpx;
  margin-right: 12rpx;
  margin-left: 78rpx;
}

.wumao-info::after {
  clear: both;
  content: '';
  display: block;
}

.wumao-info {
  display: flex;
  align-items: center;
}

.right-Triangle {
  border-top: 10rpx solid transparent;
  border-right: 10rpx solid #ff5f4e;
  border-bottom: 10rpx solid transparent;
}

.left-Triangle {
  background: #ff5f4e;
  width: 250rpx;
  height: 100rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  color: #fff;
  padding: 26rpx 8rpx 26rpx 14rpx;
  box-sizing: border-box;
}

.goWumao, .backChat {
  height: 104rpx;
  font-size: 26rpx;
  line-height: 104rpx;
  text-align: center;
}

.goWumao {
  color: #303030;
  border-bottom: 1px solid #e9e9e9;
}

.backChat {
  color: #959595;
}

.call {
  width: 520rpx;
  height: 540rpx;
}

.imgBox {
  width: 270rpx;
  height: 310rpx;
  border: 10rpx solid #dfdfdf;
  border-radius: 50rpx;
  overflow: hidden;
}
.imgBox image{
  max-width: 100%;
  max-height: 100%;
}
.call-text{
  height: 104rpx;
  border-bottom: 1px solid #e9e9e9;
  text-align: center;
  font-size: 28rpx;
  color: #303030;
  overflow: hidden;
}
.call-top{
  margin-bottom: 15rpx;
  margin-top: 20rpx;
}
.call-down{
  font-size: 20rpx;
}

.gift-input-value{
  position: fixed;
  bottom: 10rpx;
  background: #f5f5f7;
}