/**index.wxss**/

.banner {
  width: 100%;
  height: 400rpx;
}

.swiper-img {
  width: 100%;
  height: 100%;
}

.wx-swiper-dot::before {
  color: #fff;
}

.down swiper {
  height: 100%;
}

.wx-swiper-dot-active::before {
  color: #ff2c29;
}

.cat-list {
  padding: 0 48rpx;
}

.cat-item {
  display: inline-block;
  width: 112rpx;
  text-align: center;
  font-size: 28rpx;
  margin-bottom: 44rpx;
}

.cat-item image {
  width: 112rpx;
  height: 112rpx;
  margin-bottom: 20rpx;
}

.kong {
  height: 20rpx;
  width: 100%;
  background: #eee;
}

/*超实惠*/
.title {
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #101010;
  text-align: center;
  position: relative;
}

.afford-content {
  display: flex;
}

.afford-content-left image {
  width: 270rpx;
  height: 300rpx;
  border: 1px solid #f5f5f5;
  box-sizing: border-box;
}

.afford-content-right {
  font-size: 0;
}

.afford-content-left {
  font-size: 0;
}

.afford-content-right image {
  width: 240rpx;
  height: 150rpx;
  border: 1px solid #f5f5f5;
  box-sizing: border-box;
}
.fale{
  display: flex;
}
.fale-left {
  font-size: 0;
}

.fale-left image {
  width: 490rpx;
  height: 330rpx;
  box-sizing: border-box;
  border: 1px solid #f5f5f5;
}

.fale-right {
  font-size: 0;
}

.fale-right image {
  width: 260rpx;
  box-sizing: border-box;
  border: 1px solid #f5f5f5;
}
.title-right{
  display: inline-block;
  font-size: 24rpx;
  position: absolute;
  right: 24rpx;
}
.ad{
  font-size: 0;
}
.ad image{
  width: 100%;
}