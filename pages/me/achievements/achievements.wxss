.header{
    width: 100%;
    height: 246rpx;
    background: #fe76a8;
    display: flex;
    align-items: center;
    padding-left: 140rpx;
}
.header-left image,.header-right image{
    width: 48rpx;
    height: 48rpx;
    margin-bottom: 14rpx;
}
.header-left,.header-right{
    font-size: 28rpx;
    color: #fff;
    display: flex;
    font-weight: bold;
    flex-direction: column;
    align-items: center;
}
.avatar{
    width: 136rpx;
    height: 170rpx;
    margin: 0 45rpx;
    background-image: url(../../../img/achieven/personal_my_accomplishments_portrait.png);
    background-size: 100% 100%;
    position: relative;
}
.avatar image{
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    position: absolute;
    bottom: 3rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
}
.kong{
    background: #f5f5f7;
    font-size: 24rpx;
    color: #959595;
    width: 100%;
    height: 100rpx;
    padding-left: 24rpx;
    padding-top: 58rpx;
    box-sizing: border-box;
}
.content{
    width: 100%;
    padding-left: 20rpx;
    color: #4c4c4c;
    font-size: 28rpx;
}
.icon{
    width: 40rpx;
    height: 40rpx;
    margin-right: 14rpx;
}
.item{
    display: flex;
    align-items: center;
    height: 120rpx;
    width: 100%;
    box-sizing: border-box;
    border-bottom: 1px solid #dfdfdf;
}
.hide{
    width: 147rpx;
    height: 47rpx;
    margin-left: auto;
    margin-right: 50rpx;
}