.catel-postinfo{
	height: 62rpx;
	background-color: #f5f5f7;
	padding-left:38rpx;
	margin-top: 28rpx;
	font-size: 24rpx;
	color:#303030;
	line-height: 62rpx;
	border-radius: 5px;
}

.catel-postinfo-name{
	color:#ff4d8d;
}

.pd-reply{
	height:96rpx;
	width: 750rpx;
	font-size: 30rpx;
	color: #101010;
	background: #F5F5F7;
	position: fixed;
	bottom: 0;
	display: flex;
	align-items: center;
}

.pd-reply image{
	width: 60rpx;
	height: 60rpx;
	margin: 0 24rpx;
}

.pd-reply form{
	display: flex;
	flex-direction:row;
	flex-wrap: wrap;
	align-items: center;
}

.pd-reply form input{
	width: 520rpx;
	height: 68rpx;
	background: #fff;
	display: inline-block;
	padding-left: 20rpx;
	border-radius: 10rpx;
}

.pd-reply form button{
	width: 102rpx;
	height: 68rpx;
	padding: 0;
	border: none;
	background: #f5f5f7;
	font-size: 30rpx;
	line-height: 68rpx;
	color: #C4C4C4;
	display: inline-block;
}