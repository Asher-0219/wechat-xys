.header {
  display: flex;
  align-items: center;
  background: #fafafa;
  flex-direction: column;
}

page {
  padding-bottom: 124rpx;
}

.header-top {
  align-items: center;
  display: flex;
  position: relative;
  left: 70rpx;
  padding-top: 50rpx;
  margin-bottom: 28rpx;
}

.avatar {
  width: 292rpx;
  height: 292rpx;
  border: 6rpx solid #fff;
  border-radius: 50%;
  margin-right: 16rpx;
}

.level {
  width: 34rpx;
  height: 30rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  left: -10rpx;
}

.level-box {
  position: absolute;
  bottom: 0;
  left: 80rpx;
  font-size: 18rpx;
  color: #fff;
}
.level-bg{
  width: 110rpx;
  height: 26rpx;
  border-radius:5rpx; 
  line-height: 26rpx;  
}
.level-bg text{
  position: absolute;
  right: 12rpx;
}
.level-1{
  background: #d9d9d9;
}
.level-2,.level-3{
  background: #a7d2ff;
}
.level-4,.level-5{
  background: #c1cff6;
}
.level-6,.level-7{
  background: #ddb0ec;
}
.level-8,.level-9{
  background: #f2aec0;
}
.level-10,.level-11,.level-12{
  background: #f9c65b;
}
.bigImg {
  width: 750rpx;
  height: 750rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}

.voice-img {
  width: 109rpx;
  height: 45rpx;
}

.song {
  position: relative;
}

.medal {
  width: 22rpx;
  height: 28rpx;
  margin-right: 12rpx;
}

.song text {
  position: absolute;
  left: 52rpx;
  line-height: 45rpx;
  font-size: 20rpx;
  color: #fff;
}

.header-content {
  display: flex;
  align-items: center;
  margin-bottom: 43rpx;
}

.header-content image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 4rpx;
}

.header-content text {
  font-size: 30rpx;
  color: #101010;
  margin-right: 12rpx;
}

.header-down {
  display: flex;
  align-items: center;
  padding-bottom: 34rpx;
}

.charm {
  margin-right: 40rpx;
  font-size: 22rpx;
  color: #c4c4c4;
}

.tuhao {
  font-size: 22rpx;
  color: #c4c4c4;
}

.charm image {
  width: 26rpx;
  height: 22rpx;
  margin-right: 6rpx;
  display: inline-block;
}

.charm-text {
  margin-right: 16rpx;
}

.tuhao-text {
  margin-right: 12rpx;
}

.tuhao image {
  display: inline-block;
  width: 23rpx;
  height: 21rpx;
  margin-right: 10rpx;
}

.value {
  font-size: 24rpx;
  color: #959595;
}

.fans-box {
  padding: 24rpx 0;
  color: #c4c4c4;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 180rpx;
  height: 100rpx;
}

.num {
  color: #959595;
}

.title-text {
  margin-bottom: 14rpx;
}

.kong {
  height: 8rpx;
  background: #fafafa;
  width: 100%;
}

.age-box {
  display: flex;
  align-items: center;
  padding-left: 22rpx;
  height: 100rpx;
}

.age {
  position: relative;
  top: 4rpx;
}

.gender {
  width: 68rpx;
  height: 32rpx;
}

.age text {
  font-size: 18rpx;
  line-height: 32rpx;
  color: #fff;
  position: absolute;
  right: 12rpx;
}

.age-item {
  height: 32rpx;
  color: #fff;
  font-size: 22rpx;
  margin-left: 10rpx;
  background: #cfbaff;
  padding: 0 15rpx;
  border-radius: 5rpx;
  line-height: 32rpx;
}

.id {
  background: #ff6b9f;
}

.ul {
  background: #fc9c6a;
}

/*相册*/

.photos {
  position: relative;
  padding: 30rpx 24rpx 44rpx 22rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.title {
  font-size: 28rpx;
  color: #4c4c4c;
  margin-bottom: 40rpx;
}

.imgs {
  max-width: 150rpx;
  max-height: 150rpx;
  border-radius: 5rpx;
  margin-right: 12rpx;
}

.more {
  position: absolute;
  right: 24rpx;
  bottom: 100rpx;
  width: 16rpx;
  height: 28rpx;
}

.no-photo {
  color: #c4c4c4;
  font-size: 24rpx;
}

/*资料*/

.data-list {
  display: flex;
  flex-direction: column;
  padding: 30rpx 22rpx 0 22rpx;
  font-size: 26rpx;
  color: #4c4c4c;
}

.title {
  margin-bottom: 60rpx;
}

.content-title {
  font-size: 26rpx;
  color: #959595;
  margin-right: 70rpx;
  width: 105rpx;
  display: inline-block;
}

.data-item {
  margin-bottom: 60rpx;
  display: flex;
  align-items: center;
}

.honor {
  font-size: 22rpx;
  width: 124rpx;
  height: 40rpx;
  text-align: center;
  color: #fd659c;
  border: 1px solid #fd659c;
  border-radius: 60rpx;
  display: inline-block;
  line-height: 40rpx;
}

.start {
  font-size: 24rpx;
  color: #ff2874;
}

.gifts {
  position: relative;
  padding: 30rpx 24rpx 30rpx 22rpx;
  box-sizing: border-box;
  width: 100%;
}

.gifts .title {
  margin-bottom: 0;
}

.gift-list {
  display: flex;
  align-items: center;
}

.gift-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 80rpx;
}

.gift-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
}

.gift-item text {
  display: inline-block;
  height: 28rpx;
  font-size: 18rpx;
  padding: 0 18rpx;
  color: #fff;
  text-align: center;
  line-height: 28rpx;
  background: #d1d1d1;
  border-radius: 5rpx;
}

.gift-list .more {
  bottom: 68rpx;
}

.footer {
  justify-content: space-between;
  display: flex;
  align-items: center;
  height: 98rpx;
  position: fixed;
  z-index: 999;
  bottom: 0;
  border-top: 1px solid #959595;
  background: #fff;
  width: 100%;
}

.footer-item {
  padding: 0 54rpx;
  box-sizing: border-box;
  width: 154rpx;
}

.footer-item image {
  width: 50rpx;
  height: 50rpx;
}

.phone text {
  font-size: 18rpx;
  color: #fff;
}

.phone image {
  margin-bottom: 12rpx;
}

.phone {
  width: 120rpx;
  height: 120rpx;
  padding: 26rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: #ff77a4;
  border-radius: 50%;
  position: relative;
  bottom: 30rpx;
}

.isFav {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 0;
  width: 200rpx;
  height: 70rpx;
  color: #fff;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 10rpx;
}

.dynamic {
  position: relative;
  padding: 30rpx 24rpx 100rpx 22rpx;
}

.all {
  position: absolute;
  top: 30rpx;
  right: 24rpx;
  display: flex;
  align-items: center;
}

.all text {
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #c4c4c4;
}

.all .more {
  position: static;
}

.no-dynamic {
  color: #c4c4c4;
  font-size: 24rpx;
}

.thread-title {
  font-size: 24rpx;
  color: #fd659c;
  padding: 0 15rpx;
  text-align: center;
  height: 38rpx;
  border: 2rpx solid #fd659c;
  line-height: 38rpx;
  margin-bottom: 34rpx;
  border-radius: 5rpx;
  display: inline-block;
}

.thread-message {
  font-size: 24rpx;
  color: #101010;
  margin-bottom: 28rpx;
  display: inline-block;
}

.date {
  display: flex;
  align-items: center;
}

.date {
  font-size: 24rpx;
  color: #c4c4c4;
  display: flex;
  justify-content: space-between;
}

.reply {
  display: flex;
  align-items: center;
}

.reply-img {
  height: 24rpx;
  width: 24rpx;
  margin-right: 10rpx;
}

.reply-num {
  margin-right: 52rpx;
}

.zan-img {
  width: 34rpx;
  height: 27rpx;
  margin-right: 10rpx;
}

.alert {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  position: fixed;
  z-index: 999;
  top: 0;
}

.alert-content {
  width: 670rpx;
  height: 290rpx;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  background: #fff;
  border-radius: 15rpx;
  overflow: hidden;
}

.alert-top {
  height: 185rpx;
  width: 100%;
  border: 1px solid #fafafa;
  text-align: center;
  line-height: 185rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #303030;
}

.alert-down {
  height: 105rpx;
  width: 100%;
  color: #ff4d8d;
  font-size: 30rpx;
  line-height: 105rpx;
  text-align: center;
}
